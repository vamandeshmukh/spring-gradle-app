<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- bean definition -->

	<bean id="emp" class="spring.gradle.app.Employee">
		<property name="name">
			<value>Sonu</value>
		</property>
	</bean>

	<bean id="emp2" class="spring.gradle.app.Employee">
		<constructor-arg value="Monu" type="java.lang.String"></constructor-arg>
	</bean>

	<bean id="emp3" class="spring.gradle.app.Employee">
		<constructor-arg value="Ponu" name="name"></constructor-arg>
	</bean>

	<!-- inner beans -->

	<bean id="emp4" class="spring.gradle.app.Employee">
		<property name="id">
			<value>103</value>
		</property>
		<property name="name">
			<value>Tonu</value>
		</property>
		<property name="salary">
			<value>15.8</value>
		</property>

		<property name="dept">
			<bean id="department" class="spring.gradle.app.Department">
				<property name="id" value="20"></property>
				<property name="name" value="Marketing"></property>
				<property name="functions">
					<list>
						<value>Sales</value>
						<value>Promotions</value>
						<value>Customer Care</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>

</beans>
